<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <title>Change payment method for your subscription</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Change payment method for your subscription</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block name="sveacheckout.recurring.changePaymentMethod" template="Svea_Checkout::order/recurring_change_payment_method.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Svea\Checkout\ViewModel\Order\View\RecurringInfo\ChangePaymentMethod</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>